<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppBasTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:actionMenuTextColor">@color/colorTextNormal</item>
    </style>

    <!--     Side nav theme. -->
    <style name="ThemeSideNav" parent="AppBasTheme">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
    </style>

    <style name="AppBasTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--    Toolbar -->
    <style name="AppBasTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppBasTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolTheme" parent="AppBasTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="android:drawableTint" tools:targetApi="m">@color/colorWhite</item>
        <item name="android:iconTint" tools:targetApi="o">@color/colorWhite</item>

        <item name="android:hideOnContentScroll" tools:targetApi="lollipop">true</item>
        <item name="android:resumeWhilePausing" tools:targetApi="lollipop">true</item>

        <item name="android:actionMenuTextColor">@color/colorTextNormal</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorTextNormal</item>

        <item name="titleEnabled">true</item>
    </style>

    <style name="ToolTheme.Light" parent="ToolTheme">
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="ToolTheme.CropImage" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorBlack</item>

        <item name="homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="statusBarBackground">@color/colorPrimary</item>
    </style>

    <style name="SearchView" parent="AppBasTheme.PopupOverlay">
        <!-- Text color -->
        <item name="android:editTextColor">@color/colorPrimary</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="searchHintIcon">@color/colorOnPrimary</item>
        <item name="closeIcon">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorGray</item>
    </style>

<!--    Full Screen Size  -->
    <style name="fullScreenDialog" parent="AppBasTheme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

<!--    Theme.MaterialComponents -->
    <style name="AppBasTheme.AddContent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpinnerTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"/>


</resources>