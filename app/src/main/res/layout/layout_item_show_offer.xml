<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="productOffer"
            type="com.ecom.starshop.model.ModelProduct.ProductOffer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small_2"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:elevation="@dimen/elevation_2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/back_dot_selector"
            app:tint="@color/colorTextNormal"
            android:layout_margin="@dimen/margin_small_4"
            android:padding="@dimen/padding_small_4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{productOffer.offerTitle}"
            android:textSize="@dimen/size_18sp"
            android:padding="@dimen/padding_medium_8" />

    </LinearLayout>
</layout>